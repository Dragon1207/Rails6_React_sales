

    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <img class="img-fluid" src="http://placehold.it/350x150" width="100%">
        </div>

        <div class="col-md-10 offset-md-1">
          <div class="float-right">
            <h3><span class="badge badge-pill badge-purple"><%= number_to_currency(@product.price) %></span></h3>
          </div>
          <div>
            <h3><%= @product.name %></h3>
          </div>

          <div class="mb-4">
            <%= @product.description %>
          </div>


        <% if current_user %>
          <div class="float-right btn-edit-del">
            <%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: 'Are you sure you want to delete this product?' }, class: 'btn btn-outline-danger btn-lg' %>
          </div>

          <div class="btn-edit-del">
            <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-outline-purple btn-lg' %>
          </div>
        <% end %>
        </div>
      </div>
     </div>
