<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center form-header-style mt-5 pt-2 pb-3">
        Sign In
      </h1>

      <!-- <div class="card panel-div"> -->

    <div class="form-body-style px-5 pt-4">
      <%= form_with url: signin_path, local: true do |f| %>
        <div class="form-group row">
          <div class="col-md-3 col-form-label">
            <%= f.label :email %>
          </div>
          <div class="col-md-9">
            <%= f.email_field :email, id: 'email', class: 'form-control', placeholder: 'Your email address', autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3 col-form-label">
            <%= f.label :password %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password, id: 'password', class: 'form-control', placesholder: 'Your password here' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-10 offset-md-3">
            <%= f.submit 'Sign In', class: 'btn btn-outline-purple' %>
          </div>
        </div>

      <% end %>
    </div>
  <!-- </div> -->


    </div>
  </div>
</div>
